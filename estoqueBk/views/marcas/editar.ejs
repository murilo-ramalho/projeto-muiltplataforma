<%- include('../partials/header.ejs') %>
<%- include('../partials/menu.ejs', {inAdm: inAdm}) %>
<br>
<div class="container">
    <div class="card">
        <div class="card-header">
            Editar Marca
        </div>
        <div class="card-body">
            <form method="post" action="/marcas/salvar">
                <input
                 type="hidden"
                 name="id"
                 id="id"
                 value="<%= marca.id %>">
                <div class="form-floating mb-3">
                    <input 
                        type="text" 
                        class="form-control"
                        name="descricao"
                        id="descricao"
                        placeholder="Descrição"
                        value="<%= marca.descricao %>"
                        required>
                    <label for="descricao">Descrição</label>
                </div>
                <div class="form-floating mb-3">
                    <button class="btn btn-primary" type="submit">Salvar</button>
                    <a href="/marcas" class="btn btn-warning">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>