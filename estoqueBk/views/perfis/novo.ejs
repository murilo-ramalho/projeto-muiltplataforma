<%- include('../partials/header.ejs') %>
<%- include('../partials/menu.ejs', {inAdm: inAdm}) %>
<br>
<div class="container">
    <div class="card">
        <div class="card-header">
            Novo Perfil
        </div>
        <div class="card-body">
            <form method="post" action="/perfis">
                <div class="form-floating mb-3">
                    <input 
                        type="text" 
                        class="form-control"
                        name="descricao"
                        id="descricao"
                        placeholder="Descrição"
                        required>
                    <label for="descricao">Descrição</label>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="true" id="inAdm" name="inAdm">
                    <label class="form-check-label" for="flexCheckDefault">
                      É Administrador?
                    </label>
                  </div>
                <div class="form-floating mb-3">
                    <button class="btn btn-primary" type="submit">Salvar</button>
                    <a href="/perfis" class="btn btn-warning">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>